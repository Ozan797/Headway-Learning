{
  "compilerOptions": {
    "target": "ES6",                          // JavaScript version output
    "module": "commonjs",                     // Module system used
    "outDir": "./dist",                       // Output directory for compiled JavaScript
    "rootDir": "./src",                       // Root directory for TypeScript files
    "strict": true,                           // Enables strict type-checking
    "esModuleInterop": true                   // Allows interoperability with ES6 modules
  },
  "include": ["src/**/*.ts"],                 // Includes TypeScript files for compilation
  "exclude": ["node_modules"]                 // Excludes node_modules from being compiled
}
