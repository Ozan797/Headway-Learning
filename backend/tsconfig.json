{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strictPropertyInitialization": false,  // Temporarily disable strict property checks
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
